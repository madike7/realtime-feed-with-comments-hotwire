<!-- otan kanw click sto load more posts, ginetai respond me ena turbo frame page_handler -->
<%= turbo_frame_tag "page_handler" do %>
  <%= turbo_stream_action_tag(
    "append",
    target: "posts",
    template: %(#{render @posts}) 
  ) %>  <!-- turbo stream pou kanei append ta @posts sth lista me ta post -->
  <%= turbo_stream_action_tag(
    "replace",
    target: "pagination",
    template: %(#{render "pagination", pagy: @pagy})
    ) %>  <!-- turbo stream pou kanei replace to content tou pagination div me ena updated version tou pagination -->
<% end %>
